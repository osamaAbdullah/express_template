{
  "compileOnSave": false,
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "Node",
    "target": "ES2022",
    "esModuleInterop": true,
    //    "target": "ESNext",
    //    "module": "NodeNext",
    //    "moduleResolution": "NodeNext",
    //    "lib": [
    //      "ESNext"
    //    ],
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "sourceMap": true,
    "declaration": true,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "noEmitHelpers": false,
    "paths": {
      "@/*": [
        "*"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@db/*": [
        "db/*"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@utils/*": [
        "lib/utils/*"
      ],
      "@console/*": [
        "console/*"
      ]
    },
    "types": [
      "@types/node"
    ],
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "isolatedModules": true,
    "removeComments": true,
    "rootDir": "./",
    "strictNullChecks": true,
    "strictPropertyInitialization": true,
    "noImplicitAny": true,
    "strictBindCallApply": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "ts-node": {
    "swc": true,
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
